<h1>Listing books</h1>

<table class="list_table">
  <tr>
    <th>Title</th>
    <th>Description</th>
    <th>Cat</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @books.each do |book| %>
  <tr>
    <td><%= image_tag("#{book.img_url}", :alt => "book image", :size => "100x137") %></td>
    <td><%= book.title %></td>
    <td><%= Cat.find(book.cat_id).name %></td>
    <td><%= link_to 'Show', book %></td>
    <td><%= link_to 'Edit', edit_book_path(book) %></td>
    <td><%= link_to 'Destroy', book, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

